<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Type your First Name"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="5dp"
            android:inputType="textPersonName">

        </EditText>


        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Type your Last Name"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="5dp"
            android:inputType="textPersonName">

        </EditText>

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Type your Email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress">

        </EditText>


        <EditText
            android:id="@+id/regPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Type your Password"
            android:drawableLeft="@drawable/ic_outline_lock_24"
            android:drawableStart="@drawable/ic_outline_lock_24"
            android:drawablePadding="5dp"
            android:inputType="textPassword">

        </EditText>

        <EditText
            android:id="@+id/regConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/ic_outline_lock_24"
            android:drawableStart="@drawable/ic_outline_lock_24"
            android:drawablePadding="5dp"
            android:inputType="textPassword">

        </EditText>

        <EditText
            android:id="@+id/regLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Location"
            android:drawableLeft="@drawable/ic_baseline_add_location_24"
            android:drawableStart="@drawable/ic_baseline_add_location_24"
            android:drawablePadding="5dp"
            android:inputType="text">

        </EditText>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/male_female">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:shadowColor="@color/blue" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:paddingRight="10dp"
                android:id="@+id/male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="female"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:id="@+id/female"/>
        </RadioGroup>


        <EditText
            android:id="@+id/contactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Valid Mobile Number"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:inputType="text">

        </EditText>

        <Button
            android:id="@+id/btnSignUpGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/round_bg">

        </Button>

        <Button
            android:id="@+id/backToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="OOPS! I'VE AN Account"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/round_bg">

        </Button>
        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:visibility="invisible"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/blue"
            />

    </LinearLayout>

</ScrollView>